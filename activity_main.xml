<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:paddingLeft="16dp"
    android:paddingTop="16dp"
    android:paddingRight="16dp"
    android:paddingBottom="16dp"
    tools:context=".MainActivity">

    <TextView
        android:id="@+id/textViewTitle"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="Calculadora de Gorjeta"
        android:textSize="24sp"
        android:textAlignment="center"
        android:layout_marginBottom="16dp"/>

    <EditText
        android:id="@+id/editTextBillAmount"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:hint="Informe o valor da conta"
        android:inputType="numberDecimal"
        android:layout_below="@id/textViewTitle"
        android:layout_marginTop="16dp"/>

    <EditText
        android:id="@+id/editTextDescription"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:hint="Descrição do Pedido"
        android:layout_below="@id/editTextBillAmount"
        android:layout_marginTop="16dp"/>

    <SeekBar
        android:id="@+id/seekBarTipPercentage"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_below="@id/editTextDescription"
        android:layout_marginTop="16dp"
        android:padding="16dp"
        android:max="30"
        android:progress="15"/>

    <TextView
        android:id="@+id/textViewTipPercentage"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="Porcentagem de Gorjeta: 15%"
        android:textAlignment="center"
        android:layout_below="@id/seekBarTipPercentage"
        android:layout_marginTop="8dp"/>

    <Button
        android:id="@+id/btnCalculate"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_below="@id/textViewTipPercentage"
        android:layout_marginTop="16dp"
        android:text="Calcular Gorjeta"
        android:onClick="calculateTip"/>

    <TextView
        android:id="@+id/textViewTipAmount"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_below="@id/btnCalculate"
        android:layout_marginTop="16dp"
        android:text="Valor da Gorjeta: R$0.00"/>

    <TextView
        android:id="@+id/textViewTotalAmount"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_below="@id/textViewTipAmount"
        android:layout_marginTop="16dp"
        android:text="Total (Conta + Gorjeta): R$0.00"/>
</RelativeLayout>